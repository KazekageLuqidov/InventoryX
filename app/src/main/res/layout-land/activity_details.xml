<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dlayout"
    tools:context="com.example.lucky.inventoryx.Details">

    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/nav"
        android:layout_gravity="start"
        app:itemBackground="@drawable/pressed_grey"
        android:id="@+id/navv"
        app:headerLayout="@layout/nav_header">

    </android.support.design.widget.NavigationView>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/colorPrimary"
        tools:context="com.example.lucky.inventoryx.Details">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:padding="@dimen/detTxt14_pad"
            android:text=""
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:layout_marginTop="14dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="@dimen/detailsImage_w"
            android:layout_height="@dimen/detailsImage_h"
            android:id="@+id/imageView2"
            android:background="@drawable/out_icon"
            android:layout_marginRight="58dp"
            android:layout_marginEnd="58dp"
            android:layout_alignTop="@+id/imageView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText12"
            android:hint="@string/barcode_number"
            android:textColor="@color/lightgrey"
            android:layout_below="@+id/imageView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/detEdmar_L"
            android:layout_marginStart="@dimen/detEdmar_S"
            android:layout_marginTop="@dimen/detEdmarT" />

        <ImageView
            android:layout_width="@dimen/detailsImage_w"
            android:layout_height="@dimen/detailsImage_w"
            android:id="@+id/imageView4"
            android:background="@drawable/search_icon"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView5"
            android:background="@drawable/scan_icon"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView14"
            android:layout_toEndOf="@+id/textView14"
            android:layout_marginBottom="9dp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/detLogo_w"
            android:layout_height="@dimen/detLogo_h"
            android:layout_alignTop="@+id/textView14"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:focusableInTouchMode="true"
            app:srcCompat="@mipmap/app_logo" />


    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>


